{
  "name": "fhevm-universal-sdk",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK for building confidential dApps with any framework",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:packages && npm run install:examples",
    "install:packages": "npm install --workspace=packages/fhevm-sdk",
    "install:examples": "npm install --workspace=examples/nextjs-arbitration && npm install --workspace=examples/arbitration-platform",
    "build": "npm run build:sdk && npm run build:examples",
    "build:sdk": "npm run build --workspace=packages/fhevm-sdk",
    "build:examples": "npm run build --workspace=examples/nextjs-arbitration",
    "dev:next": "npm run dev --workspace=examples/nextjs-arbitration",
    "dev:platform": "npm run dev --workspace=examples/arbitration-platform",
    "test": "npm run test --workspaces",
    "clean": "rm -rf node_modules packages/*/node_modules examples/*/node_modules",
    "setup": "npm run install:all && npm run build:sdk"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "blockchain",
    "ethereum",
    "zama",
    "sdk",
    "react",
    "nextjs",
    "vue",
    "universal"
  ],
  "author": "FHEVM SDK Team",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.0",
    "turbo": "^1.11.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
